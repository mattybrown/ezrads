
<h4><%= "#{@publication.name} - #{display_date(@publication.date)}" %></h4>
<div class="row">
  <div class="col m6">
    <p><%= "Ads booked: #{@publication.ads.count}" %></p>
  </div>
  <div class="col m6">
    <table>
      <tr>
        <td>Gross</td>
        <td><%= "$#{@gross}" %></td>
      </tr>
      <tr>
        <td>Paid</td>
        <td><%= "$#{@paid}" %></td>
      </tr>
      <tr>
        <td>GST</td>
        <td><%= "$#{@gst}" %></td>
      </tr>
      <tr>
        <td>Total</td>
        <td><%= @gross + @paid + @gst %></td>
      </tr>
    </table>
  </div>
</div>
<div class="row">
  <div class="col m6">
    <%= column_chart @pub_data %>
  </div>
  <div class="col m6">
    <%= pie_chart @repdata, label: "Ads sold by rep" %>
  </div>
</div>
