
<div class="row">
  <h3>Create new ad</h3>
  <form action="/create/ad" method="post" class="col s12">

    <div class="row">
      <div class="input-field col s6">
        <input type="text" id="height" name="ad[height]">
        <label for="size">Height</label>
      </div>
      <div class="input-field col s6">
        <input type="text" id="columns" name="ad[columns]">
        <label for="columns">Columns</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <select name="ad[feature]">
          <option value="" disabled selected>Feature</option>
          <% @features.each do |f| %>
            <option value="<%= f.id %>"><%= f.name %></option>
          <% end %>
        </select>
      </div>
      <div class="input-field col s6 publication-dates">
        <select name="ad[publication]">
          <option value="" disabled selected>Publication</option>
          <% @publications.each do |p| %>
            <option value="<%= p.id %>"><%= display_date(p.date) %> - <%= p.name %></option>
          <% end %>
        </select>
        <a href="#" class="btn ad-repeat">Add repeat date</a>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <textarea name="ad[note]" id="note"></textarea>
        <label for="note">Notes</label>
      </div>
      <div class="input-field col s6">
        <select name="ad[customer]">
          <option value="" disabled selected>Customer</option>
          <% @customers.each do |c| %>
            <option value="<%= c.id %>"><%= c.business_name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <button type="submit" class="btn-floating btn-large"><i class="fa fa-plus"></i></button>
  </form>
</div>
