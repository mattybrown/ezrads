
<div class="row">
  <h3>Create task</h3>
  <form action="/create/task" method="post" class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <% if @tasktitle %>
        <input type="text" id="contact_name" name="task[title]" value="<%= title = @tasktitle.gsub(/-/, '-') %>">
        <% else %>
        <input type="text" id="contact_name" name="task[title]">
        <% end %>
        <label for="title">Title</label>
      </div>
      <div class="input-field col s6">
        <select name="task[user_id]">
          <option value="" disabled selected>Recipient</option>
          <% @users.each do |u| %>
            <% if @user %>
              <% if @user.to_i == u.id %>
                <option value="<%= u.id %>" selected><%= u.username %></option>
              <% else %>
                <option value="<%= u.id %>"><%= u.username %></option>
              <% end %>
            <% else %>
            <option value="<%= u.id %>"><%= u.username %></option>
            <% end %>
          <% end %>
        </select>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input type="text" class="datepicker" id="deadline" name="task[deadline]" value="<%= Date.today.strftime('%d %b %Y') %>">

      </div>
      <div class="input-field col s6">
        <select name="task[priority]">
          <option value="" disabled selected>Priority</option>
          <option value="1">Low</option>
          <option value="2">Medium</option>
          <option value="3">High</option>
        </select>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <% if @task_ad %>
          <textarea name="task[body]" id="body" style="height:120px;"><%= "<a href='#{@task_ad}'>View ad</a><br />" %></textarea>
          <label for="body">Body</label>
        <% else %>
          <textarea name="task[body]" id="body" style="height:120px;"></textarea>
          <label for="body">Body</label>
        <% end %>
      </div>
    </div>
    <button type="submit" class="btn-floating btn-large"><i class="fa fa-plus"></i></button>
  </form>
</div>
