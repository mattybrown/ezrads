
<div class="row">
  <h4>Edit feature</h4>
  <form action="/edit/feature/<%= @feature.id %>" method="post" class="col s12">
    <div class="row">
      <div class="input-field col s12 m6">
        <input type="text" id="name" name="feature[name]" value="<%= @feature.name %>">
        <label for="name">Feature Name</label>
      </div>
      <div class="input-field col s12 m6">
        <input type="number" id="rate" name="feature[rate]" value="<%= @feature.rate %>" min="0" step="0.01">
        <label for="rate">Charge rate (col x cm) or word limit if run on</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m6">
        <select name="feature[type]">
          <option value="" disabled>Calculation type</option>
          <option value="1" <%= @feature.type == 1 ? "selected" : "" %>>Price by column centimeter</option>
          <option value="2" <%= @feature.type == 2 ? "selected" : "" %>>Price by word</option>
        </select>
      </div>
      <div class="input-field col s12 m6">
        <input type="checkbox" name="feature[rop]" id="rop" value="true" <%= @feature.rop == true ? "checked" : "" %> >
        <label for="rop">Is this feature run of paper?</label>
      </div>
    </div>
    <button type="submit" class="btn"><i class="fa fa-plus"></i> Update</button>
  </form>
</div>
