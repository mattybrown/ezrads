<a href="/create/task" class="btn right"><i class="fa fa-plus-circle"></i> Create task</a>
<a href="#" class="btn toggle-completed">Toggle completed</a>
<table>
  <thead>
    <th>ID</th>
    <th>Title</th>
    <th>Deadline</th>
    <th>Created at</th>
    <th>Created by</th>
  </thead>
  <tbody>
<% @tasks.each do |t| %>
  <tr class="<% if t.completed %>completed<% else %>incomplete<% end %>">

    <td><%= t.id %></td>
    <td><a href="/view/task/<%= t.id %>"><%= t.title %><a/></td>
    <td><%= display_time(t.deadline) %></td>
    <td><%= display_time(t.created_at) %></td>
    <td><%= display_user(t.created_by) %></td>

  </tr>
<% end %>
  </tbody>
</table>
