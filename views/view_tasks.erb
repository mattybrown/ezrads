<div class="row">
  <div class="col s12 m6 l8 offset-m3 offset-l2">
    <% @tasks.each do |t| %>
    <div class="card">
      <div class="card-content">
        <span class="card-title"><%= t.title %></span>
        <p class="grey-text text-darken-2">Deadline: <%= display_date(t.deadline) %></p>
        <p class="grey-text text-darken-2">Task created at: <%= display_time(t.created_at) %></p>
        <p class="grey-text text-darken-2">Issued by: <%= display_user(t.created_by) %></p>
        </p>
        <p><%= t.body %></p>
      </div>
      <div class="card-action">
        <% if t.completed %>
          <a href="/task/incomplete/<%= t.id %>" class="btn">Mark as incomplete</a>
        <% else %>
          <a href="/task/completed/<%= t.id %>" class="btn">Mark as complete</a>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
