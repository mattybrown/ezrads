<ul class="collection">
  <li class="collection-item avatar">
    <i class="fa fa-male circle"></i>

    <span class="title"><%= @ad.customer.business_name %></span>

    <p><%= @ad.id %><br />
    <%= "#{@ad.height}x#{@ad.columns}" %></p>
    <a class="btn-floating right red modal-trigger" href="/delete/ad/<%= @ad.id %>"><i class="fa fa-close"></i></a>
    <a class="btn-floating right blue lighten-2" href="/edit/ad/<%= @ad.id %>"><i class="fa fa-edit"></i></a>
    <% if @ad.completed != true %>
      <a class="btn-floating right" href="/ad/completed/<%= @ad.id %>"><i class="fa fa-check"></i></a>
    <% else %>
      <a class="btn-floating right" href="/ad/incomplete/<%= @ad.id %>"><i class="fa fa-eraser"></i></a>
    <% end %>

  </li>
</ul>
