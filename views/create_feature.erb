
<div class="row">
  <h4>Create feature</h4>
  <form action="/create/feature" method="post" class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <input type="text" id="name" name="feature[name]">
        <label for="name">Feature Name</label>
      </div>
      <div class="input-field col s6">
        <select name="feature[paper]">
          <option value="" disabled selected>Paper</option>
          <% @papers.each do |p| %>
            <option value="<%= p.id %>"><%= p.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input type="text" id="rate" name="feature[rate]">
        <label for="rate">Charge rate (col x cm)</label>
      </div>
    </div>
    <button type="submit" class="btn"><i class="fa fa-plus"></i> Create</button>
  </form>
</div>
