
<div class="row">
  <h4>Create feature</h4>
  <form action="/create/single_publication" method="post" class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <input type="date" id="date" class="datepicker" name="publication[date]" value="Publication date">
      </div>
      <div class="input-field col s6">
        <select name="publication[publication_id]">
          <option value="" disabled selected>Paper</option>
          <% @papers.each do |p| %>
            <option value="<%= p.id %>"><%= p.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input type="text" id="name" name="publication[name]">
        <label for="name">Publication Name</label>
      </div>
    </div>
    <button type="submit" class="btn"><i class="fa fa-plus"></i> Create</button>
  </form>
</div>
