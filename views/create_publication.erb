
<div class="row">
  <h3>Create single publication</h3>
  <form action="/create/single_publication" method="post" class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <input type="text" id="name" name="publication[name]">
        <label for="name">Publication name</label>
      </div>
      <div class="input-field col s6">
        <input type="date" id="date" class="datepicker" name="publication[date]" value="Publication date">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <select name="publication[publication_id]">
          <option value="" disabled selected>User assignment</option>
          <option value="1">Admin Users</option>
          <option value="2">Blenheim</option>
          <option value="3">Wellington</option>
        </select>
      </div>
    </div>
    <button type="submit" class="btn-floating btn-large"><i class="fa fa-plus"></i></button>
  </form>
</div>

