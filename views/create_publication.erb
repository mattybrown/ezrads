        <input type="date" id="end_date" class="datepicker" name="publication[end_date]" value="Last publication date">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <select name="publication[publication_id]">
          <option value="" disabled selected>User assignment</option>
          <option value="1">Admin Users</option>
          <option value="2">Blenheim</option>
          <option value="3">Wellington</option>
        </select>
      </div>
    </div>
    <button type="submit" class="btn-floating btn-large"><i class="fa fa-plus"></i></button>
  </form>
</div>
