<div class="row">
  <div class="col s12 m6 l8 offset-m3 offset-l2">
    <div class="card">
      <div class="card-content">
        <span class="card-title"><%= @task.title %></span>
        <p><%= @task.body %></p>
      </div>
      <div class="card-action">
        <% if @task.completed %>
          <a href="/task/incomplete/<%= @task.id %>" class="btn">Mark as incomplete</a>
        <% else %>
          <a href="/task/completed/<%= @task.id %>" class="btn">Mark as complete</a>
        <% end %>
      </div>
    </div>
  </div>
</div>
