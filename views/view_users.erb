<a href="/create/user" class="btn">Create user</a>
<ul class="collection">
<% @user.each do |u| %>
  <li class="collection-item avatar">
    <i class="fa fa-male circle"></i>
    <span class="title"><%= u.username %></span>
    <p><%= u.phone %><br />
    <%= u.email %></p>
    <a class="btn-floating right red modal-trigger" href="/delete/user/<%= u.id %>"><i class="fa fa-close"></i></a>
    <a class="btn-floating right blue lighten-2" href="/edit/user/<%= u.id %>"><i class="fa fa-edit"></i></a>
  </li>
<% end %>
</ul>
